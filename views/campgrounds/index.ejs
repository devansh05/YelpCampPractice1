<% layout("layouts/boilerplate") %>
<h1>All Campgrounds</h1>
<a href="/campgrounds/new">Add New Campground</a>
  <% for(let campground of allCampgrounds){%>
    <div class="card my-1">
      <div class="row">
        <div class="col-md-4">
          <img src="<%= campground.image %>" alt="" class="img-fluid">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <div class="card-title"><%= campground.title %></div>
            <div class="card-text"><%=campground.location %></div>
            <div class="card-text">
              <div class="text muted"><%=campground.description %></div>
            </div>
            <a href="/campgrounds/<%= campground._id%>" class="btn btn-primary">View <%= campground.title %></a>
          </div>
        </div>
      </div>
    </div>
  <%}%>