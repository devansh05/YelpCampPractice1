<% layout("layouts/boilerplate") %>
<div class="row">
  <h1 class="text-center">Edit Campgrounds</h1>
  <div class="col-6 offset-3">
    <form
      action="/campgrounds/edit/<%=campground._id%>?_method=PATCH"
      method="POST"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div>
        <!-- to group content together under obj campground name="campground[title]" -->
        <div>
          <label class="form-label" for="title">Title</label>
          <input
            class="form-control mb-2"
            type="text"
            id="title"
            name="campground[title]"
            value="<%= campground.title %>"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please write a title.</div>
        </div>

        <div>
          <label class="form-label" for="location">Location</label>
          <input
            class="form-control mb-2"
            type="text"
            id="location"
            name="campground[location]"
            value="<%= campground.location %>"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please choose a location.</div>
        </div>

        <div>
          <label class="form-label" for="price">Price</label>
          <input
            class="form-control mb-2"
            type="number"
            id="price"
            name="campground[price]"
            value="<%= campground.price %>"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please give a price.</div>
        </div>

        <div>
          <label class="form-label" for="description">Description</label>
          <textarea
            class="form-control mb-2"
            type="text"
            id="description"
            name="campground[description]"
            required
          >
            <%= campground.description %>
            </textarea
          >
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please write a description.</div>
        </div>
        
        <div>
          <label class="form-label mt-4" for="image">Edit Images</label>
          <div class="my-3">
            <% campground.images.forEach((img, i) => { %>
              <img src= <%= img.thumbnail %> class='img-thumbnail rounded'/>
              <div class="form-check-inline">
                <input class="" id="image-<%=i%>" type="checkbox"name="deleteImages[]" value="<%=img.filename%>"/>
              </div>
              <label role="button" for="image-<%=i%>" >Delete Image ?</label>
              <% }); %>
          </div>
          <input
            class="form-control mb-2"
            type="file"
            id="image"
            name="image"
            value="<%= campground.image %>"
            multiple
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please choose an image.</div>
        </div>
        <label class="form-label text-danger fs-6 mb-4" for="">You can only upload 3 images.</label>

        <div class="d-flex justify-content-between">
          <button class="btn btn-success mb-2">Edit Campground</button>
          <a class="btn btn-primary" href="/campgrounds/">All Campgrounds</a>
        </div>
      </div>
    </form>
  </div>
</div>
