<% layout("layouts/boilerplate") %>
<div class="row">
  <h1 class="text-center">Edit Campgrounds</h1>
  <div class="col-6 offset-3">
    <form
      action="/campgrounds/edit/<%=campground._id%>?_method=PATCH"
      method="POST"
      novalidate
      class="validated-form"
    >
      <div>
        <!-- to group content together under obj campground name="campground[title]" -->
        <div>
          <label class="form-label" for="title">Title</label>
          <input
            class="form-control mb-2"
            type="text"
            id="title"
            name="campground[title]"
            value="<%= campground.title %>"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please write a title.</div>
        </div>

        <div>
          <label class="form-label" for="location">Location</label>
          <input
            class="form-control mb-2"
            type="text"
            id="location"
            name="campground[location]"
            value="<%= campground.location %>"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please choose a location.</div>
        </div>

        <div>
          <label class="form-label" for="price">Price</label>
          <input
            class="form-control mb-2"
            type="number"
            id="price"
            name="campground[price]"
            value="<%= campground.price %>"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please give a price.</div>
        </div>

        <div>
          <label class="form-label" for="description">Description</label>
          <textarea
            class="form-control mb-2"
            type="text"
            id="description"
            name="campground[description]"
            required
          >
            <%= campground.description %>
            </textarea
          >
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please write a description.</div>
        </div>

        <div>
          <label class="form-label" for="image">Image Url</label>
          <input
            class="form-control mb-2"
            type="text"
            id="image"
            name="campground[image]"
            value="<%= campground.image %>"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please choose an image.</div>
        </div>

        <div class="d-flex justify-content-between">
          <button class="btn btn-success mb-2">Edit Campground</button>
          <a class="btn btn-primary" href="/campgrounds/">All Campgrounds</a>
        </div>
      </div>
    </form>
  </div>
</div>
