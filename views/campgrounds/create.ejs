<% layout("layouts/boilerplate") %>
<div class="row">
  <h1 class="text-center">New Campgrounds</h1>
  <div class="col-6 offset-3">
    <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
      <div>
        <!-- to group content together under obj campground name="campground[title]" -->
        <div class="">
          <label class="form-label" for="title">Title</label>
          <input
            class="form-control mb-2"
            type="text"
            id="title"
            name="campground[title]"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please choose a title.</div>
        </div>

        <div>
          <label class="form-label" for="location">Location</label>
          <input
            class="form-control mb-2"
            type="text"
            id="location"
            name="campground[location]"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please choose a location.</div>
        </div>

        <div>
          <label class="form-label" for="price">Price</label>
          <input
            class="form-control mb-2"
            type="text"
            id="price"
            name="campground[price]"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please choose a location.</div>
        </div>

        <div>
          <label class="form-label" for="description">Description</label>
          <textarea
            class="form-control mb-2"
            type="text"
            id="description"
            name="campground[description]"
            required
          ></textarea>
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please choose a location.</div>
        </div>

        
        <input class="form-control mt-4 mb-2" type="file" name="image" value="{Choose Files}" multiple/>
        <label class="form-label text-danger fs-6 mb-4" for="">You can only upload 3 images.</label>

        <div class="d-flex justify-content-between">
          <button class="btn btn-success mb-2">Add Campground</button>
          <a class="btn btn-primary" href="/campgrounds/">All Campgrounds</a>
        </div>
      </div>
    </form>
  </div>
</div>